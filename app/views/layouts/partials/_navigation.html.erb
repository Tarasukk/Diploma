<div class="bg-gray-50 border border-gray-200 rounded-md p-4 w-full max-w-xs text-sm" x-data="{ open: false }">
  <h2 class="text-base font-semibold mb-3">Навігація</h2>

  <ul class="space-y-1">
    <li>
      <a href="#" class="text-blue-600 hover:underline">На головну</a>
    </li>
    <li>
      <a href="#" class="text-blue-600 hover:underline flex items-center gap-1">
        Особистий кабінет
      </a>
    </li>
    <li class="font-semibold text-gray-900 cursor-pointer select-none" @click="open = !open">
      Мої курси
      <span class="ml-1 text-xs text-gray-500" x-text="open ? '▲' : '▼'"></span>
    </li>
    <template x-if="open">
      <ul>
        <% current_user.enrolled_courses.each do |course| %>
          <li class="ml-4">
            <%= link_to "▸ #{course.title}", course_path(course), class: "text-blue-600 hover:underline" %>
          </li>
        <% end %>
      </ul>
    </template>
  </ul>
</div>
