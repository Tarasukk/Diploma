<header class="flex justify-between px-7 py-3 bg-white border border-gray-300">
  <div class="flex items-center space-x-3">
    <%= link_to root_path do %>
      <%= image_tag "/images/logo.png", alt: "Logo", class: "h-10 w-10" %>
    <% end %>
    <%= link_to root_path do %>
      <span class="text-lg text-gray-500">Diploma</span>
    <% end %>
  </div>

  <div class="flex items-center space-x-2">
    <div class="flex gap-5">
    <%= fa_icon "search", class: "fa-lgtext-gray-600 hover:text-black cursor-pointer" %>
    <%= fa_icon "bell", class: "fa-lg text-gray-600 hover:text-black cursor-pointer" %>
    <%= fa_icon "comment", class: "fa-lg text-gray-600 hover:text-black cursor-pointer" %>
    </div>

    <div class="relative inline-block text-left" x-data="{ open: false }">
      <button
        @click="open = !open"
        type="button"
        class="inline-flex items-center gap-x-3 bg-white px-3 py-2 text-sm text-gray-500 hover:bg-gray-100 focus:outline-none"
        aria-expanded="true"
        aria-haspopup="true"
      >
        <span class="text-lg text-gray-500"><%= current_user.name %></span>

        <div class="flex items-center justify-center h-9 w-9 rounded-full bg-gray-200 text-gray-500 font-bold text-sm">
          <%= current_user.name.to_s.split.map(&:first).join.first(2).upcase %>
        </div>

        <svg class="h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.72-3.7a.75.75 0 111.06 1.06l-4.25 4.25a.75.75 0 01-1.06 0L5.25 8.27a.75.75 0 01-.02-1.06z" clip-rule="evenodd" />
        </svg>
      </button>

      <div
        x-show="open"
        @click.away="open = false"
        x-transition
        class="absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white shadow-lg focus:outline-none"
        role="menu"
      >
        <div class="py-1" role="none">
            <%= link_to 'Профіль', profile_path, class: "block w-full px-4 py-2 text-sm text-gray-500 hover:bg-gray-100 text-left" %>
          <%= button_to 'Вийти', destroy_user_session_path, method: :delete, class: "w-full px-4 py-2 text-sm text-gray-500 hover:bg-gray-100 text-left" %>
        </div>

      </div>
    </div>
  </div>
</header>
