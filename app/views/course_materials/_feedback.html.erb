<h2 class="text-2xl font-semibold mt-10 mb-4 mt-8">Відгук</h2>

<div class="overflow-x-auto">
  <table class="divide-y divide-gray-200 text-sm">
    <tbody class="divide-y divide-gray-100">
      <tr>
        <th class="px-4 py-3 text-left font-medium text-gray-600 bg-gray-50 w-1/3 border border-gray-200">Оцінка</th>
        <% if @student_submition&.grade.present? %>
          <td class="px-4 py-3 text-gray-900 border border-gray-200"><%= @student_submition.grade  %> / <%= @course_material.max_grade %></td>
        <% else %>
          <td class="px-4 py-3 text-gray-900 border border-gray-200">-</td>
        <% end %>
      </tr>
      <tr>
        <th class="px-4 py-3 text-left font-medium text-gray-600 border border-gray-200">Оцінено на</th>
        <% if @student_submition&.grade.present? %>
          <td class="px-4 py-3 text-gray-900 border border-gray-200"><%= I18n.l(@student_submition.graded_at, format: "%-d %B %Y, %H:%M") %></td>
        <% else %>
          <td class="px-4 py-3 text-gray-900 border border-gray-200">-</td>
        <% end %>
      </tr>
      <tr class="bg-gray-50">
        <th class="px-4 py-3 text-left font-medium text-gray-600 border border-gray-200">Оцінив</th>
        <% if @teacher.present? %>
          <td class="px-4 py-3 flex items-center gap-2 border border-gray-200">
            <span class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-gray-300 text-xs font-medium text-gray-700">
              <%= @teacher.split.map { |w| w[0] }.join %>
            </span>
            <span class="text-gray-900"><%= @teacher %></span>
          </td>
        <% else %>
        <td class="px-4 py-3 flex items-center gap-2 border border-gray-200">-</td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
